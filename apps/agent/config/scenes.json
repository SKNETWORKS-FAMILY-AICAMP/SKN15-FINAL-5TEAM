  "r_10_narr_akaza_escape": {
    "summary": "전투 종료, 아카자 도주",
    "allowed_speakers": ["narrator"],
    "beats": { "intro": "어둠 속으로 멀어지는 그림자." },
    "choices": [
      { "id": "a", "text": "도망치는 아카자에게 마지막 한마디", "value": "shout_akaza" },
      { "id": "b", "text": "말없이 바라본다",                     "value": "watch_silent" }
