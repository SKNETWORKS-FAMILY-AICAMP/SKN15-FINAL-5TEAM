{
  "scene5_intro_post_enmu": {
    "summary": "엔무전 직후, 탄지로는 쓰러져 움직일 수 없다",
    "allowed_speakers": ["narrator", "tanjiro"],
    "beats": {
      "intro": "객차 잔해가 식으며 밤공기에 피 냄새가 번진다.",
      "mid": "탄지로(숨을 고르며): \"미안해… 이제 네 선택에 달렸어.\""
    },
    "choices": [
      { "id": "go_fork", "text": "다음 행동을 결정한다", "value": "to_fork" }
    ],
    "split_rules": [
      { "when": "to_fork", "goto": "scene5_fork_decision" }
    ]
  },

  "scene5_fork_decision": {
    "summary": "갈림길: 동료 규합 vs 렌고쿠 직행",
    "allowed_speakers": ["tanjiro"],
    "beats": {
      "intro": "탄지로: \"시간이 없어… 젠이츠랑 이노스케를 모을까, 아니면 곧장 렌고쿠 씨에게 갈까? 넌 어떻게 할래?\""
    },
    "choices": [
      { "id": "ally_route", "text": "젠이츠와 이노스케를 찾아 합류시킨다(히든 가능)", "value": "gather_allies" },
      { "id": "rengoku_route", "text": "곧장 렌고쿠에게 달려간다(원작 루트)", "value": "find_rengoku" }
    ],
    "split_rules": [
      { "when": "gather_allies", "goto": "scene5_mission_gather" },
      { "when": "find_rengoku",  "goto": "r_01_akaza_taunt" }
    ]
  },

  "scene5_mission_gather": {
    "summary": "동료 규합 미션: 이노스케/젠이츠 설득",
    "allowed_speakers": ["tanjiro"],
    "beats": {
      "intro": "탄지로: \"흩어진 동료들을 설득하자. 각자 시간을 많이 쓸 수 없어. 다음은 누구부터?\""
    },
    "choices": [
      { "id": "try_inosuke", "text": "이노스케 설득 시도", "value": "try_inosuke" },
      { "id": "try_zenitsu", "text": "젠이츠 설득 시도", "value": "try_zenitsu" },
      { "id": "finish_mission", "text": "판정으로 이동한다", "value": "finish" }
    ],
    "split_rules": [
      { "when": "try_inosuke", "goto": "scene5_mission_gather" },
      { "when": "try_zenitsu", "goto": "scene5_mission_gather" },
      { "when": "finish",      "goto": "scene5_mission_judgement" }
    ],
    "default_images": [
      { "resource_id": "gather_allies_map_01", "type": "cutscene", "placement": "sidebar" }
    ]
  },

  "scene5_mission_judgement": {
    "summary": "미션 결과 판정(히든/원작)",
    "allowed_speakers": ["tanjiro"],
    "speaker_rules": [
      { "require_flags": ["recruited_inosuke","recruited_zenitsu","hidden_ending_eligible"], "override": ["tanjiro","inosuke","zenitsu"] },
      { "require_flags": ["recruited_inosuke","recruited_zenitsu"], "override": ["tanjiro","inosuke","zenitsu"] },
      { "require_flags": ["recruited_inosuke"], "override": ["tanjiro","inosuke"] },
      { "require_flags": ["recruited_zenitsu"], "override": ["tanjiro","zenitsu"] }
    ],
    "beats": {
      "intro": "탄지로: \"지금까지의 선택으로 결과가 정해졌어. 준비됐지? 결과를 확인할까?\""
    },
    "choices": [
      { "id": "confirm", "text": "결과 확인", "value": "finish" }
    ],
    "split_rules": [
      {
        "when": "finish",
        "require_flags": ["order_inosuke_then_zenitsu"],
        "limits": { "total_turns_used_max": 8, "char_turns_max": { "inosuke": 3, "zenitsu": 3 } },
        "goto": "scene5_end_hidden_rengoku_lives",
        "set": { "route": "hidden_branch", "ending": "hidden:rengoku_lives", "end_reason": "mission_success" }
      },
      {
        "when": "finish",
        "goto": "scene5_end_original_rengoku_falls",
        "set": { "route": "original_branch", "ending": "original:rengoku_falls", "end_reason": "mission_failed_or_timeout" }
      }
    ]
  },

  "scene5_end_hidden_rengoku_lives": {
    "summary": "히든 엔딩: 렌고쿠 생존",
    "allowed_speakers": ["tanjiro","inosuke","zenitsu","kyojuro","narrator"],
    "beats": {
      "intro": "모두의 호흡이 하나로 이어졌고, 불꽃은 꺼지지 않았다."
    },
    "choices": [],
    "default_images": [
      { "resource_id": "rengoku_alive_01", "type": "cutscene", "placement": "sidebar" }
    ]
  },

  "scene5_end_original_rengoku_falls": {
    "summary": "원작 엔딩: 렌고쿠 전사",
    "allowed_speakers": ["tanjiro","kyojuro","narrator"],
    "beats": {
      "intro": "밤은 길었고, 불꽃은 저물었다."
    },
    "choices": [],
    "default_images": [
      { "resource_id": "rengoku_fall_01", "type": "cutscene", "placement": "sidebar" }
    ]
  },

  "r_01_akaza_taunt": {
    "summary": "아카자 등장 및 도발",
    "allowed_speakers": ["akaza"],
    "beats": {
      "intro": "상현의 미소가 어둠을 가른다.",
      "mid": "힘을 갈망하는 목소리가 싸움을 재촉한다."
    },
    "choices": [
      { "id": "a", "text": "아카자에게 한마디 한다(차분)", "value": "user_line_calm" },
      { "id": "b", "text": "아카자에게 한마디 한다(분노)", "value": "user_line_angry" },
      { "id": "c", "text": "말없이 응시한다",               "value": "user_line_silent" }
    ],
    "split_rules": [
      { "when": "user_line_calm",  "goto": "r_02_kyojuro_retort" },
      { "when": "user_line_angry", "goto": "r_02_kyojuro_retort" },
      { "when": "user_line_silent","goto": "r_02_kyojuro_retort" }
    ],
    "default_images": [
      { "resource_id": "akaza_taunt_01", "type": "cutscene", "placement": "sidebar" }
    ]
  },

  "r_02_kyojuro_retort": {
